{
  "compilerOptions": {
    "declaration": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "module": "commonjs",
    "target": "ES6",
    "moduleResolution": "node",
    "jsx": "preserve",
    "lib": ["ES2020"]
  },
  "exclude": ["node_modules"]
}
